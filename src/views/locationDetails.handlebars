<!-- ================= PAGE TITLE ================= -->
<section class="py-5 text-center">
  <div class="container">
    <h2 class="fw-bold">Location Details</h2>
  </div>
</section>

<!-- ================= LOCATION INFO ================= -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row align-items-center g-4">
      <div class="col-md-6">
        <img
          src="{{location.image}}"
          class="img-fluid rounded shadow"
          alt="{{location.name}}"
        />
      </div>
      <div class="col-md-6">
        <h3>{{location.name}}</h3>
        <p>
          {{location.description}}
        </p>
        <p><strong>Region:</strong> {{location.region}}</p>
      </div>
    </div>
  </div>
</section>

<!-- ================= ARTISANS ================= -->
<section class="py-5">
  <div class="container">
    {{#each artisans}}
    <h3 class="text-center mb-4">Local Artisans</h3>

    <div class="row g-4">
      <div class="col-md-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body text-center">
            <img src="{{this.image}}" alt="{{this.name}}" class="img-fluid mb-4" />
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.specialty}}</p>
            <a href="/artisans/{{this._id}}" class="btn btn-primary">View Artisan</a>
          </div>
        </div>
      </div>
    </div>
    
  </div>
  {{/each}}
</section>


